<Page
    x:Class="Peliverkkokauppa.Profiili"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Peliverkkokauppa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFBFB6C9">
        <Grid  HorizontalAlignment="Stretch" Height="111" VerticalAlignment="Top" Background="#FF434B70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="453*"/>
                <ColumnDefinition Width="187*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="Nimi" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Hiano Nimi" VerticalAlignment="Top" Margin="116,0,0,0" Height="111" Width="844" FontSize="73.333"/>
            <Image x:Name="Logo" HorizontalAlignment="Left" Height="111" VerticalAlignment="Top" Width="111"/>
            <TextBlock Text="Username" Width="412" Height="35" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center" FontSize="24" Margin="808,0,60,0" Grid.ColumnSpan="2"/>
            <Button x:Name="Profile" Content="Front Page"  Width="194" Height="61" Foreground="White" Margin="808,30,0,20" Grid.ColumnSpan="2" Click="Profile_Click"/>
            <Button x:Name="Logout" Content="Logout" Width="194" Height="61" Foreground="White" Margin="120,30,0,20" Click="Logout_Click" Grid.Column="1"/>


        </Grid>
        <Grid Width="287" HorizontalAlignment="Right" Margin="0,116,0,0" >
            <Image x:Name="image" HorizontalAlignment="Left" Height="156" VerticalAlignment="Top" Width="129" Margin="80,27,0,0"/>
            <TextBlock x:Name="Username" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0,287,0,0" Height="41" Width="277" FontSize="33.333" TextAlignment="Center"/>
            <TextBlock x:Name="Age" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0,333,0,0" Height="41" Width="277" FontSize="33.333" TextAlignment="Center"/>
            <TextBlock x:Name="Mail" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0,379,0,0" Height="41" Width="277" FontSize="33.333" TextAlignment="Center"/>
            <TextBlock x:Name="Number" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0,425,0,0" Height="42" Width="277" FontSize="33.333" TextAlignment="Center"/>
            <Button x:Name="button" Content="Vaihda Kuva" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,188,0,0" Height="39" Width="129"/>
            <Button x:Name="button1" Content="Vaihda Tietoja" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,503,0,0" Width="129" Height="39"/>
        </Grid>
        <ScrollBar x:Name="scrollBar" HorizontalAlignment="Left" Margin="294,779,0,-71" VerticalAlignment="Top"/>
    </Grid>
</Page>
