<Page
    x:Class="Peliverkkokauppa.Frontpage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Peliverkkokauppa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="165" Width="1280">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="Otsikko" HorizontalAlignment="Right" Margin="0,0,150,0" TextWrapping="Wrap" Text="Hieno nimi" VerticalAlignment="Center" Grid.Column="0" FontSize="64"/>
            </Grid>
    </Grid>
</Page>
